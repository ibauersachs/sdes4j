<?xml version="1.0" encoding="ISO-8859-1"?>
<ivysettings>
	<property name="upload.url" value="https://oss.sonatype.org/service/local/staging/deploy/maven2"/>

	<signers>
		<pgp name="pgpsig" secring="${pgp.secring}" password="${pgp.password}" keyId="${pgp.keyId}"/>
	</signers>

	<settings defaultResolver="default"/>

	<resolvers>
		<chain name="default">
			<ibiblio name="public" m2compatible="true"/>
		</chain>
		<url name="nexus" m2compatible="true" signer="pgpsig">
			<artifact pattern="${upload.url}/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
		</url>
		<filesystem name="local" signer="pgpsig" m2compatible="true">
			<artifact pattern="${build.dist.mavenlocal.dir}/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
		</filesystem>
	</resolvers>

	<credentials
		host="oss.sonatype.org"
		realm="Sonatype Nexus Repository Manager"
		username="${upload.user}"
		passwd="${upload.password}"
	/>
</ivysettings>